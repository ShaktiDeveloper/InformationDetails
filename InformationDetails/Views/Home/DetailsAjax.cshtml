@model InformationDetails.Models.CustomerDetali

@{
    ViewBag.Title = "DetailsAjax";
}
<head>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="Scripts/jquery-3.5.1.min.js"></script>
    <script>
        window.jQuery || document.write("<script src='Scripts/jquery-3.4.1.js'><\/script>");
    </script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
@using (Ajax.BeginForm("DetailsAjax", "Home", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccess", OnFailure = "OnFailure" }))
{
    <div>
        @Html.EditorFor(x => x.CustomerName)<br /><br />
        @Html.EditorFor(x => x.Email)<br /><br />
        @Html.EditorFor(x => x.Phone)<br /><br />
        @Html.EditorFor(x => x.City)<br /><br />
        <input type="submit" value="Click me">
    </div>

}

<script type="text/javascript">
    function OnSuccess(data) {
        console.log(data)
        alert("success")

    }
    function OnFailure(err) {
        console.error(err)
        alert("Error")

    }
</script>
