@model IEnumerable<InformationDetails.Models.UserList>

@{
    ViewBag.Title = "Index";

}

<h2>Index</h2>
@Html.AntiForgeryToken()
@Html.ValidationSummary(true)
@if (@ViewBag.Message != null)
{
    <div style="border: 1px solid red">
        @ViewBag.Message
    </div>
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<p>
    @using (@Html.BeginForm("Index", "List", FormMethod.Post))
    {
        <b> Search By:</b>
        @Html.RadioButton("searchBy", "City", true) <text>

            City</text>

        @Html.RadioButton("searchBy", "CustomerName") <text>
            CustomerName</text>

        @Html.TextBox("Searchtext") //This text box name Searchtext and conroler pass parameter name will be same.
        <input type="submit" name="submit" value="Search" />


    }
</p>

