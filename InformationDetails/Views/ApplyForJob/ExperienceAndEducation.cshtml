<!DOCTYPE html>
<html lang="en">
<head>
    @model InformationDetails.Models.ExperienceAndEducation
    @using CaptchaMvc.HtmlHelpers
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <!-- Title Page-->
    <title>ExperienceAndEducation</title>
    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">
    <!-- Main CSS-->

    <link href="~/ApplyForJob/css/main.css" rel="stylesheet" media="all">
    <style>
        .button {
            background-color: #4CAF50; /* Green */
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            -webkit-transition-duration: 0.4s; /* Safari */
            transition-duration: 0.4s;
        }

        .button1 {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
        }

        .button2:hover {
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
        }
    </style>
</head>

<body>
    <div class="page-wrapper bg-dark p-t-100 p-b-50">
        <div class="wrapper wrapper--w900">
           <input type="button" class="button button2" value="Back to login" onclick="location.href='@Url.Action("Login", "UserLogin")'" />
        </div>


        @using (Html.BeginForm("ExperienceAndEducation", "ApplyForJob", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="card card-6">
                <div class="card-heading">
                    <h2 class="title">ExperienceAndEducation</h2>
                </div>
                <div class="card-body">
                    <form>
                        @ViewBag.Message
                        <div class="form-row">
                            <div class="name">Education 1st</div>
                            <div class="value">
                                @Html.EditorFor(model => model.Education_1st, new { htmlAttributes = new { placeholder = "Enter 1st Education", @class = "input--style-6" } })
                                @Html.ValidationMessageFor(model => model.Education_1st, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Education 2nd</div>
                            <div class="value">
                                @Html.EditorFor(model => model.Education_2st, new { htmlAttributes = new { placeholder = "Enter 2nd Education", @class = "input--style-6" } })
                                @Html.ValidationMessageFor(model => model.Education_2st, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Education 3rd</div>
                            <div class="value">
                                @Html.EditorFor(model => model.Education_3st, new { htmlAttributes = new { placeholder = "Enter 3rd Education", @class = "input--style-6" } })
                                @Html.ValidationMessageFor(model => model.Education_3st, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Technology 1st</div>
                            <div class="value">
                                @Html.EditorFor(model => model.Technology_1st, new { htmlAttributes = new { placeholder = "Enter 1st Technology", @class = "input--style-6" } })
                                @Html.ValidationMessageFor(model => model.Technology_1st, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Technology 2nd</div>
                            <div class="value">
                                @Html.EditorFor(model => model.Technology_2st, new { htmlAttributes = new { placeholder = "Enter 2nd Technology", @class = "input--style-6" } })
                                @Html.ValidationMessageFor(model => model.Technology_2st, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="name">Technology 3rd</div>
                            <div class="value">
                                @Html.EditorFor(model => model.Technology_3st, new { htmlAttributes = new { placeholder = "Enter 3rd Technology", @class = "input--style-6" } })
                                @Html.ValidationMessageFor(model => model.Technology_3st, "", new { @class = "text-danger" })
                            </div>
                        </div>


                    </form>
                    @*<div align="center" class="input-group js-input-file-row">
                            @Html.MathCaptcha()
                            <p class="Error">  @ViewBag.ErrMessage </p>
                        </div>*@
                    <div class="card-footer">
                        <button type="submit" value="Submit" class="btn btn--radius-2 btn--blue-2">Send Information</button>
                    </div>

                </div>
            </div>
        }

    </div>


    <!-- Jquery JS-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <!-- Main JS-->

    <script src="js/global.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>
<!-- end document-->