<!DOCTYPE html>
<html lang="en">
<head>
    @model InformationDetails.Models.UserFile
    @using CaptchaMvc.HtmlHelpers
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <!-- Title Page-->
    <title>Apply for job by Colorlib</title>
    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">
    <!-- Main CSS-->

    <link href="~/ApplyForJob/css/main.css" rel="stylesheet" media="all">
    <style>
        .button {
            background-color: #4CAF50; /* Green */
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            -webkit-transition-duration: 0.4s; /* Safari */
            transition-duration: 0.4s;
        }

        .button1 {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
        }

        .button2:hover {
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
        }
    </style>
</head>

<body>
    <div class="page-wrapper bg-dark p-t-100 p-b-50">
        <div class="wrapper wrapper--w900">
            <div class="btn-section">
                @*<a href="login-10.html" class="link-btn">Login</a>*@
                <input type="button" class="button button2" value="personal Details" onclick="location.href='@Url.Action("Login", "UserLogin")'" />
                <input type="button" class="button button2" value="Experience and Education" onclick="location.href='@Url.Action("ExperienceAndEducation", "ApplyForJob")'" />
                <input type="button" class="button button2" value="Back to login" onclick="location.href='@Url.Action("Login", "UserLogin")'" />
            </div>


            @using (Html.BeginForm("ApplyJob", "ApplyForJob", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="card card-6">
                    <div class="card-heading">
                        <h2 class="title">Information</h2>
                    </div>
                    <div class="card-body">
                        <form>
                            @ViewBag.Message
                            <div class="form-row">
                                <div class="name">Full name</div>
                                <div class="value">
                                    @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { placeholder = "Enter FullName", @class = "input--style-6" } })
                                    @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="form-row">
                                <div class="name">Email address</div>
                                <div class="value">
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { placeholder = "Exp@gmail.com", @class = "input--style-6" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                                    @*</div>*@
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="name">Mobile Number</div>
                                <div class="value">
                                    @Html.EditorFor(model => model.MobileNumber, new { htmlAttributes = new { placeholder = "9999999999", @class = "input--style-6" } })
                                    @Html.ValidationMessageFor(model => model.MobileNumber, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="name">Age</div>
                                <div class="value">
                                    @Html.EditorFor(model => model.Age, new { htmlAttributes = new { placeholder = "Enter Age", @class = "input--style-6" } })
                                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="name">Address</div>
                                <div class="value">
                                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { placeholder = "Enter Address", @class = "input--style-6" } })
                                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="name">Message</div>
                                <div class="value">
                                    <div class="input-group">
                                        <textarea class="textarea--style-6" name="Message" placeholder="Message sent to the employer"></textarea>
                                        @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="name">Upload CV</div>
                                <div class="value">
                                    <div class="input-group js-input-file">
                                        <input class="input-file" type="file" name="file" id="file">
                                        <label class="label--file" for="file">Choose file</label>
                                        <span class="input-file__info">No file chosen</span>
                                        @Html.ValidationMessage("File", "", new { @class = "text-danger" })

                                    </div>
                                    <div class="label--desc">Upload your CV/Resume or any other relevant file. Max file size 50 MB</div>
                                </div>
                            </div>

                        </form>
                        @*<div align="center" class="input-group js-input-file-row">
                        @Html.MathCaptcha()
                        <p class="Error">  @ViewBag.ErrMessage </p>
                    </div>*@
                        <div class="card-footer">
                            <button type="submit" value="Submit" class="btn btn--radius-2 btn--blue-2">Send Application</button>
                        </div>

                    </div>
                </div>
            }

        </div>

    </div>
    <!-- Jquery JS-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
     <link href="~/Content/Site.css" rel="stylesheet" />
    <!-- Main JS-->
   
    <script src="js/global.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>
<!-- end document-->